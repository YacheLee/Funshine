<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="#ECECEC">
    <LinearLayout android:layout_margin="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageView android:id="@+id/card_weather_icon" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/sunny_mini" />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:paddingLeft="10dp">
            <TextView android:id="@+id/card_weather_day" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:text="Tomorrow" android:textColor="#595959" />
            <TextView android:id="@+id/card_weather_description" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15dp" android:text="Clear" android:textColor="#595959" />
        </LinearLayout>

        <LinearLayout android:gravity="right" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingLeft="10dp">
            <TextView android:id="@+id/card_weather_temp_high" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="20dp" android:text="78°" android:textColor="#595959" />
            <TextView android:id="@+id/card_weather_temp_low" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15dp" android:text="67°" android:textColor="#595959" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>